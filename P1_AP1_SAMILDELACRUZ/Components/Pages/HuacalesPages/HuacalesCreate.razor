@page "/Huacales/Create"
@rendermode InteractiveServer
@inject HuacalesServices huacalesServices
@inject TiposHuacalesService tiposHuacalesService
@inject NavigationManager navigationManager
@inject IJSRuntime JS

<PageTitle>Crear huacales</PageTitle>
<EditForm Model="huacales" OnValidSubmit="ConfirmarGuardar">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="container">

        <div class="card shadow-lg">

            <div class="card text-center">
                <h5 class="card-title"><i class="bi bi-fill-gear"></i></h5>
            </div>

            <div class="card-body mt-3">

                <div class="mt-3">
                    <label class="form-label"><strong>ID</strong></label>
                    <InputNumber class="form-control" @bind-Value="huacales.IdEntrada" readonly />
                </div>

                <div class="mt-3">
                    <label class="form-label"><strong>Fecha</strong></label>
                    <InputDate class="form-control" @bind-Value="huacales.Fecha" />
                    <ValidationMessage For="@(() => huacales.Fecha)" />
                </div>

                <div class="mt-3">
                    <label class="form-label"><strong>Nombre</strong></label>
                    <InputText class="form-control" @bind-Value="huacales.NombreCliente" />
                    <ValidationMessage For="@(() => huacales.NombreCliente)" />
                </div>

                <div class="mt-3">
                    <label class="form-label"><strong>Cantidad</strong></label>
                    <InputNumber class="form-control" @bind-Value="huacales.Cantidad" />
                    <ValidationMessage For="@(() => huacales.Cantidad)" />
                </div>

                <div class="mt-3">
                    <label class="form-label"><strong>Precio</strong></label>
                    <InputNumber class="form-control" @bind-Value="huacales.Precio" />
                    <ValidationMessage For="@(() => huacales.Precio)" />
                </div>

                @*Detalle*@
                <div class="border border-success p-3 mt-3">
                    <h5>Detalles Entrada</h5>
                    <div class="row">
                        <div class="col-4">
                            <label class="form-label">Tipo Huacal</label>
                            <InputSelect @bind-Value="TipoId" class="form-select">
                                <option value="0">Seleccione un tipo</option>
                                @foreach (var tipo in ListaTipos)
                                {
                                    <option value="@tipo.TipoId">@tipo.Descripcion</option>
                                }
                            </InputSelect>
                        </div>

                        <div class="col-3">
                            <label class="form-label">Cantiddad</label>
                            <InputNumber class="form-control" @bind-Value="CantidadDetalle"></InputNumber>
                        </div>
                        <div class="col-3">
                            <label class="form-label">Precio</label>
                            <InputNumber class="form-control" @bind-Value="PrecioDetalle"></InputNumber>
                        </div>
                        <div class="col-2 align-self-end">
                            <button type="button" Class="btn btn-primary bi bi-plus-lg w-100" @onclick="AgregarDetalle">Agregar</button>
                        </div>
                    </div>

                    @if (huacales.EntradaHuacalDetalle.Any())
                    {
                        <div class="mt-3">
                            <table class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>Tipo Huacal</th>
                                        <th>Cantidad</th>
                                        <th>Precio</th>
                                        <th>Importe</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var detalle in huacales.EntradaHuacalDetalle)
                                    {
                                        <tr>
                                            <td>@(ListaTipos.FirstOrDefault(t => t.TipoId == detalle.TipoId)?.Descripcion ?? "N/A")</td>
                                            <td>@detalle.Cantidad</td>
                                            <td>@detalle.Precio.ToString("C")</td>
                                            <td>@((detalle.Cantidad * detalle.Precio).ToString("C"))</td>
                                            <td>
                                                <button type="button" class="btn btn-outline-danger bi bi-trash" @onclick="() => EliminarDetalle(detalle)">Remover</button>
                                            </td>
                                        </tr>

                                    }
                                </tbody>
                            </table>
                            <label class="float-end"><strong>Cantidad de Detalles: </strong>@huacales.EntradaHuacalDetalle.Count</label>
                        </div>
                    }
                </div>
            </div>



        </div>

        <div class="card-footer text-center mt-3">
            <a href="/Huacales" class="btn btn-secondary">
                <span class="bi bi-arrow-left">Volver</span>
            </a>
            <button type="submit" class="btn btn-primary bi bi-floppy">Guardar</button>
        </div>

    </div>

</EditForm>

@code {

    public EntradasHuacales huacales = new();
    public string Mensaje { get; set; } = string.Empty;
    public List<TiposHuacales> ListaTipos { get; set; } = [];
    public int TipoId { get; set; }
    public int CantidadDetalle { get; set; }
    public double PrecioDetalle { get; set; }


    protected override async Task OnInitializedAsync()
    {
        huacales.Fecha = DateTime.Now;
        ListaTipos = await tiposHuacalesService.Listar(t => true);
    }

    public void AgregarDetalle()
    {
        if (TipoId == 0)
        {
            Mensaje = "Debe seleccionar un tipo Huacal";
            return;
        }
        if (CantidadDetalle <= 0 || PrecioDetalle <= 0)
        {
            Mensaje = "Cantidad y Precio deben ser mayores a cero.";
            return;
        }

        Mensaje = string.Empty;

        var nuevoDetalle = new EntradasHuacalesDetalle
        {
            TipoId = TipoId,
            Cantidad = CantidadDetalle,
            Precio = PrecioDetalle,
        };

        huacales.EntradaHuacalDetalle.Add(nuevoDetalle);

        RecalcularTotales();

        TipoId = 0;
        CantidadDetalle = 0;
        PrecioDetalle = 0;
    }

    public void EliminarDetalle(EntradasHuacalesDetalle detalle)
    {
        huacales.EntradaHuacalDetalle.Remove(detalle);
        RecalcularTotales();
    }


    private void RecalcularTotales()
    {
        huacales.Cantidad = huacales.EntradaHuacalDetalle.Sum(d => d.Cantidad);
        huacales.Precio = 0;
    }


    public async Task ConfirmarGuardar()
    {
        bool confirmar = await JS.InvokeAsync<bool>("confirm", "¿Deseas guardar este registro?");
        if (confirmar)
        {
            await Guardar();
        }
    }


    public async Task Guardar()
    {
        await huacalesServices.Guardar(huacales);
        await JS.InvokeVoidAsync("alert", "✅ Registro guardado exitosamente.");
        navigationManager.NavigateTo("/Huacales");
    }
}
